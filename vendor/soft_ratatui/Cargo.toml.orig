[package]
name = "soft_ratatui"
version = "0.1.2"
edition = "2024"
authors = ["gold-silver-copper"]

include = ["LICENSE-APACHE", "LICENSE-MIT", "**/*.rs", "Cargo.toml"]

description = "Software rendering for ratatui. TUI everywhere."
license = "MIT OR Apache-2.0"
repository = "https://github.com/gold-silver-copper/soft_ratatui"

[lib]
crate-type = ["cdylib", "rlib"]

[dependencies]
rustc-hash = "2.1"
ratatui = { version = "0.29.0", default-features = false }
embedded-graphics = {version = "0.8.1",optional = true}

embedded-graphics-unicodefonts = {version = "0.2.0",optional = true}
cosmic-text = { version = "0.14.2", optional = true }
copper-bdf-parser = {  version = "0.1.1", optional = true }
embedded-ttf = { version = "0.2.2", optional = true }
rusttype = { version = "0.9.3", optional = true }
[features]
default = ["unicodefonts",]
unicodefonts = ["embedded-graphics","dep:embedded-graphics-unicodefonts"]
embedded-graphics = ["dep:embedded-graphics"]
cosmic-text = ["dep:cosmic-text"]
bdf-parser = ["dep:copper-bdf-parser"]
embedded-ttf = ["dep:embedded-graphics","dep:embedded-ttf","dep:rusttype"]

#cosmic-text = ["dep:bdf-parser"]

[[example]]
name = "bdf"
path = "examples/bdf.rs"
required-features = ["bdf-parser"]
[[example]]
name = "cosmic"
path = "examples/cosmic.rs"
required-features = ["cosmic-text"]
[[example]]
name = "ttf"
path = "examples/ttf.rs"
required-features = ["embedded-ttf"]


[package.metadata.docs.rs]
# Enable all features for documentation
all-features = true

[profile.release]
#opt-level = 1
#lto = true # Enable link-time optimization
#codegen-units = 1 # Better optimizations, slightly slower compile
#panic = "abort"   # Smaller binary if you don't need backtraces
#strip = "symbols" # Remove debug symbols (unless you need them)

# Uncomment this for even smaller output (disable debug info)
#debug = true
