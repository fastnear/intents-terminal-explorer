{
  "$schema": "../gen/schemas/tauri-schema.json",
  "productName": "NEARx",
  "version": "0.4.0",
  "identifier": "com.fastnear.nearx",
  "build": {
    "frontendDist": "../../dist-egui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "NEARx - NEAR Blockchain Explorer",
        "width": 1200,
        "height": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "capabilities": ["deep-link-capability"]
    }
  },
  "bundle": {
    "resources": [
      "../../native-host/target/release/ratacat-native-host"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["nearx"]
      }
    }
  }
}