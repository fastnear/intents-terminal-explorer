{
  "$schema": "../gen/schemas/tauri-schema.json",
  "productName": "NEARx Test",
  "version": "0.1.0",
  "identifier": "com.nearx.test",
  "build": {
    "devUrl": "../test-ui/index.html",
    "frontendDist": "../test-ui"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "NEARx Deep Link Test",
        "width": 900,
        "height": 700
      }
    ],
    "security": {
      "capabilities": ["deep-link-capability"]
    }
  },
  "bundle": {
    "resources": [
      "../../native-host/target/release/nearx-native-host"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["myapp"]
      }
    }
  }
}
