# Arbitrage Scanner Configuration Example
# Copy this file to `arb_config.toml` and customize your settings
# Priority: CLI args > Environment variables > This file > Defaults

[capital]
# Total capital available for arbitrage (USD)
total_usd = 50000.0

# Maximum size for a single trade (USD)
max_trade_size_usd = 5000.0

[risk]
# Minimum profit percentage to consider (e.g., 0.3 = 0.3%)
min_profit_pct = 0.3

# Maximum slippage tolerance (e.g., 1.0 = 1%)
max_slippage_pct = 1.0

# Maximum exposure as % of pool liquidity (e.g., 10 = 10%)
max_pool_exposure_pct = 10.0

# Minimum pool liquidity to monitor (USD)
min_pool_liquidity_usd = 100000.0

[execution]
# Execution mode: "display" | "simulate" | "execute"
# - display: Show opportunities only, no execution
# - simulate: Build transactions and estimate outcomes
# - execute: Submit live transactions (requires NEAR account)
mode = "simulate"

# NEAR account for signing transactions (required for "execute" mode)
# Must have credentials in ~/.near-credentials/mainnet/<account>.json
near_account = "your-account.near"

# Extra gas buffer in TGas for transaction safety
gas_buffer_tgas = 50

# Require manual confirmation before each trade
require_confirmation = false

# Example CLI usage:
#
# Display mode (default):
#   ./ref-arb-scanner --capital 10000 --max-trade-size 1000 --min-profit 0.5
#
# Simulation mode:
#   ./ref-arb-scanner --capital 50000 --execution-mode simulate
#
# Live execution (requires NEAR account):
#   ./ref-arb-scanner \
#     --capital 100000 \
#     --max-trade-size 5000 \
#     --execution-mode execute \
#     --near-account arb-bot.near \
#     --require-confirmation
